<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-lg-4">
      <table class="table table-borderless mt-4">
        <thead>
          <tr><h2>アカウント画面</h2>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="row">email</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th scope="row">birthday</th>
            <% if @user.birthday == nil %>
            <td>未登録</td>
            <% else %>
            <td><%= @user.birthday %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <button type="button" class="btn btn-outline-primary"><%= link_to "edit", edit_user_registration_path %></button>
      <button type="button" class="btn btn-outline-primary"><%= link_to "logout", destroy_user_session_path, method: :delete %></button>
    </div>
    <div class="col-12 col-lg-8">
      <% if @user.hotels.blank? %>
      <h2>登録ホテルはありません <%= link_to 'ホテル登録', new_hotel_path, {class: "btn btn-outline-primary"} %></h2>
      <% else %>
      <h2>登録ホテル <%= link_to 'ホテル登録', new_hotel_path, {class: "btn btn-outline-primary"} %></h2>
      <% end %>
      <% @user.hotels.each do |hotel| %>
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-7">
            <%= image_tag hotel.hotel_img.to_s, {width: "100%",  height: "300"} %>
          </div>
          <div class="col-md-5">
            <div class="card-body">
              <h5 class="card-title"><%= link_to hotel.hotel_name, hotel_path(id: hotel.id) %></h5>
              <p class="card-text">Tell: <%= hotel.tell %></p>
              <p class="card-text">Email: <%= hotel.email %></p>
            </div>
            <div class="text-right pr-2">
              <small class="text-muted">Update: <%= hotel.updated_at.strftime('%Y/%m/%d') %></small>
            </div>
            <% if current_user.id == hotel.user.id %>
            <%= link_to "edit", edit_hotel_path(hotel.id), class: "btn btn-link" %>
            <%= link_to "room登録", new_hotel_room_path(hotel.id), class: "btn btn-link" %>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
