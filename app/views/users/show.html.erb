<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-sm-3 d-none d-sm-block">
      <%= render 'users/shared/side_menu', user: @user %>
    </div>
    <div class="col-12 col-sm-9">
      <div class="card">
        <%= render 'users/shared/header_menu', user: @user %>
        <div class="card-body shadow-sm">
          <div class="card my-3">
            <div class="card-body p-5 profile">
              <h5 class="card-title">プロフィール</h5>
              <p class="card-text">ユーザー名: <%= @user.name %></p>
              <p class="card-text">メールアドレス: <%= @user.email %></p>
              <p class="card-text">生年月日: <%= @user.birthday %></p>
              <%= link_to "編集",  edit_user_registration_path, {class: "lcard-link p-1"} %>
              <%= link_to "ログアウト", destroy_user_session_path, {class: "lcard-link p-1", method: :delete} %>
              <div class="text-right pr-3 ">
                <small class="text-muted">Update: <%= @user.updated_at.strftime('%Y/%m/%d') %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
