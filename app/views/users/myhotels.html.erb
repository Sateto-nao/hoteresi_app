<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-sm-3 d-none d-sm-block">
      <%= render 'users/shared/side_menu', user: @user %>
    </div>
    <div class="col-12 col-sm-9">
      <div class="card shadow-sm">
        <%= render 'users/shared/header_menu', user: @user %>
        <div class="card-body">
          <% unless @user.hotels.blank? %>
            <h4 class="text-left">マイホテル <%= link_to 'ホテル登録', new_hotel_path, {class: "btn btn-outline-primary"} %></h4>
          <% else %>
            <h4>マイホテルはありません <%= link_to 'ホテル登録', new_hotel_path, {class: "btn btn-outline-primary"} %></h4>
            <p class="text-muted">＊マイホテルは、ユーザーに提供するホテルを登録することで反映されます。<br>ホテルスタッフの方はボタンから登録してください。</p>
          <% end %>
          <% @user.hotels.each do |hotel| %>
          <div class="card my-3 shadow-sm">
            <div class="row no-gutters">
              <div class="col-lg-7 my-auto">
                <%= image_tag hotel.hotel_img.thumb.to_s, {width: "100%", class: "img-fluid"} %>
              </div>
              <div class="col-12 col-lg-5 my-auto">
                <div class="overflow-auto" style="width:100%; height:200px;">
                  <div class="card-body p-4">
                    <div class="text-right">
                        <small class="text-muted">下へスクロール</small>
                      </div>
                    <h5 class="card-title"><%= link_to hotel.hotel_name, hotel_rooms_path(hotel_id: hotel.id) %></h5>
                    <p class="card-text">Address: 〒<%= hotel.postcode.to_s.insert(3, "-") %><br>
                      <%= hotel.prefecture_name %><%= hotel.address_city %><%= hotel.address_street %></p>
                      <p class="card-text">
                        <% if hotel.preview == "1" %>
                          オンライン内見可
                        <% else %>
                          オンライン内見不可
                        <% end %><br>
                        <% if hotel.contract == "1" %>
                          オンライン契約可
                        <% else %>
                          オンライン契約不可
                        <% end %><br>
                        <% if hotel.parking == "1" %>
                          駐車場:有
                        <% else %>
                          駐車場:無
                        <% end %>
                      </p>
                      <div class="card-text">
                        <small class="text-muted"><%= hotel.introduction %></small>
                      </div>
                      <div class="text-right pr-2">
                        <small class="text-muted">Update: <%= hotel.updated_at.strftime('%Y/%m/%d') %></small>
                      </div>
                      <% if current_user.id == @user.id %>
                        <%= link_to "ホテル編集", edit_hotel_path(hotel.id), class:"pr-1" %>
                        <%= link_to "ルーム登録", new_hotel_room_path(hotel.id), class:"pr-1" %>
                        <%= link_to "ルーム一覧", "/users/#{@user.id}/myhotel/#{hotel.id}/myrooms", class:"pr-1" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
