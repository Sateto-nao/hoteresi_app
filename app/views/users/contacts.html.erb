<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-sm-3 d-none d-sm-block">
      <%= render 'users/shared/side_menu', user: @user %>
    </div>
    <div class="col-12 col-sm-9">
      <div class="card shadow-sm">
        <%= render 'users/shared/header_menu', user: @user %>
        <div class="card-body">
          <% unless @reserves.blank? %>
            <h4 class="text-left">ルーム問い合わせ一覧<span class="text-primary">(<%= @reserves.count %>)</span></h4>
          <% else %>
            <h4>ルームへの問い合わせはこちらに表示されます</h4>
          <% end %>
          <% @reserves.each do |reserve| %>
          <div class="card shadow-sm">
            <div class="card-body">
              <div class="row">
                <div class="col-6">
                  <h6 class="card-title"><%= reserve.room.hotel.hotel_name %>/<%= reserve.room.room_name %> / 問い合わせ ID:<%= reserve.id %></h6>
                  <p class="card-text">お問い合わせ内容: <span class="text-muted font-weight-bold"><%= reserve.contact.name %></p>
                    <p class="card-text">
                      契約について: <span class="text-muted font-weight-bold"><%= reserve.how_contract %></span> 日程: <span class="text-muted font-weight-bold"><%= reserve.contract %></span><br>
                      内見について: <span class="text-muted font-weight-bold"><%= reserve.how_preview %></span> 日程: <span class="text-muted font-weight-bold"><%= reserve.preview %></span><br>
                      希望入居日: <span class="text-muted font-weight-bold"><%= reserve.start_date %></span><br>
                      入居人数: <span class="text-muted font-weight-bold"><%= reserve.group %>人</span><br>
                    </p>
                  </div>
                  <div class="col-6">
                    <p class="card-text">備考<br><%= reserve.notes %></p>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @reserves %>
  </div>
