<div class="container mt-5">
  <div class="row">
    <div class="col-sm-3 d-none d-sm-block">
      <%= render 'hotels/shared/hotel_side_search', hotel: @hotel %>
    </div>
    <div class="col-sm-9">
      <%= render 'hotels/shared/hotel_search', hotel: @hotel %>
      <% @hotels.each do |hotel| %>
      <div class="card mt-3 shadow-sm">
        <div class="row no-gutters">
          <div class="col-lg-7">
            <%= link_to (image_tag hotel.hotel_img.to_s, {width: "100%",  height: "100%", class: "img-fluid"}), hotel_rooms_path(hotel_id: hotel.id) %>
          </div>
          <div class="col-lg-5 my-auto">
            <div class="overflow-auto" style="width:100%; height:200px;">
              <div class="card-body">
                <div class="text-right">
                  <small class="text-muted">下へスクロール</small>
                </div>
                <h6 class="card-title"><%= link_to hotel.hotel_name, hotel_rooms_path(hotel_id: hotel.id) %></h6>
                <p class="card-text">Address: 〒<%= hotel.postcode.to_s.insert(3, "-") %><br>
                  <%= hotel.prefecture_name %><%= hotel.address_city %><%= hotel.address_street %></p>
                  <p class="card-text">
                    <% if hotel.preview == "1" %>
                    オンライン内見可
                    <% else %>
                    オンライン内見不可
                    <% end %><br>
                    <% if hotel.contract == "1" %>
                    オンライン契約可
                    <% else %>
                    オンライン契約不可
                    <% end %><br>
                    <% if hotel.parking == "1" %>
                    駐車場:有
                    <% else %>
                    駐車場:無
                    <% end %>
                  </p>
                  <div class="card-text">
                    <small class="text-muted"><%= hotel.introduction %></small>
                  </div>
                  <div class="text-right pr-2">
                    <small class="text-muted">Update: <%= hotel.updated_at.strftime('%Y/%m/%d') %></small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <%= paginate @hotels %>
  </div>
