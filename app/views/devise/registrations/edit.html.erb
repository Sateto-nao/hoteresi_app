<div class="container mt-5">
  <h2>Edit Profile</h2>
  <div class="row">
    <div class="col-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, {autofocus: true, autocomplete: "name", class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, {autofocus: true, autocomplete: "email", class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label :birthday, "生年月日" %><br />
        <%= f.date_select :birthday, {autofocus: true, autocomplete: "birthday", class: "form-control"} %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %> <i>(変更しない場合は空欄にしてください)</i><br />
        <%= f.password_field :password, {autocomplete: "new-password", class: "form-control"} %>
        <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %>文字以上に設定してください</em>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワードの確認" %><br />
        <%= f.password_field :password_confirmation, {autocomplete: "new-password", class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label :current_password, "現在のパスワード" %> <i>(入力しないと反映されません)</i><br />
        <%= f.password_field :current_password, {autocomplete: "current-password", class: "form-control"} %>
      </div>
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-outline-primary" %>
        <%= link_to "Back", :back, class: "btn btn-link" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-8">
      <h4>退会フォーム</h4>
      <h5 class="text-muted mt-3">退会しますか？</h5>
      <%= button_to "cancel your account", registration_path(resource_name), {class: "btn btn-outline-primary", data: { confirm: "Are you sure?" }, method: :delete} %>
    </div>
  </div>
</div>
