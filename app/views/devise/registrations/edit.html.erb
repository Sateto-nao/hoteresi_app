<div class="container mt-5">
  <div class="row">
    <div class="col-sm-3 d-none d-sm-block">
      <%= render 'users/shared/side_menu', user: @user %>
    </div>
    <div class="col-12 col-sm-9">
      <div class="card">
        <%= render 'users/shared/header_menu', user: @user %>
        <div class="card-body shadow-sm">
          <div class="col-12 col-lg-8 p-5">
            <h3>プロフィール編集</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :name, "名前" %><br />
              <%= f.text_field :name, {autofocus: true, autocomplete: "name", class: "form-control"} %>
            </div>
            <div class="form-group">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, {autofocus: true, autocomplete: "email", class: "form-control"} %>
            </div>
            <div>
              <%= f.label :生年月日 %>
            </div>
            <div class="form-group form-inline">
              <%= f.date_select :birthday, {start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1990, 1, 1)},{autofocus: true, autocomplete: "birthday", class: "col-4 col-md-3 form-inline form-control"} %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="form-group">
              <%= f.label :password, "新しいパスワード" %> <i>(変更しない場合は空欄にしてください)</i><br />
              <%= f.password_field :password, {autocomplete: "new-password", class: "form-control"} %>
              <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %>文字以上に設定してください</em>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "新しいパスワードの確認" %><br />
              <%= f.password_field :password_confirmation, {autocomplete: "new-password", class: "form-control"} %>
            </div>
            <div class="form-group">
              <%= f.label :current_password, "現在のパスワード" %> <i>(入力しないと反映されません)</i><br />
              <%= f.password_field :current_password, {autocomplete: "current-password", class: "form-control"} %>
            </div>
            <div class="actions">
              <%= f.submit "Update", class: "btn btn-outline-primary" %>
              <%= link_to "Back", :back, class: "btn btn-link" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
