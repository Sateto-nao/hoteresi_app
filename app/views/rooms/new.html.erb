<div class='container mt-5'>
  <%= form_for [@hotel, @room], url: hotel_rooms_path  do |f| %>
  <%= render 'layouts/error_message', model: f.object %>
  <form>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.label :room_name, "ルーム名" %>
        <%= f.text_field :room_name, {class: "form-control"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :price, "賃貸料(月額)" %>
        <%= f.number_field :price, {class: "form-control"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :introduction, "ルーム紹介文" %>
        <%= f.text_area :introduction, {class: "form-control", rows: "5"} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :room_img, "ルーム画像" %>
        <%= f.file_field :room_img, {class: "form-control-file"} %>
      </div>
    </div>
    <%= f.submit "Registration", class: "btn btn-outline-primary" %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </form>
  <% end %>
</div>
