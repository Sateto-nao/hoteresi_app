<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm mb-3">
        <%= image_tag @room.room_img.to_s, {width: "100%", class: "img-fluid"}  %>
        <div class="card-body p-5">
          <h5 class="card-title"><%= @room.room_name %></h5>
          <p class="card-text text-muted">
            <%= safe_join(@room.introduction.split("\n"),tag(:br)) %>
          </p>
          <h5 class="card-text text-md-right">
            最大人数: ￥<%= @room.group %>人
          </h5>
          <h5 class="card-text text-md-right">
            <% if @room.smoke == "1" %>
            禁煙
            <% else %>
            喫煙可
            <% end %>
          </h5>
          <h5 class="card-text text-md-right">賃料: ￥<%= @room.price %></h5>
          <div class="text-right pr-2">
            <small class="text-muted">Update: <%= @room.updated_at.strftime('%Y/%m/%d') %></small>
          </div>
          <% if user_signed_in? %>
          <div id="favorite_<%= @room.id %>">
            <%= render "favorites/favorite", room: @room %>
          </div>
          <% end %>
          <% if user_signed_in? %>
          <div class="text-right mt-2">
            <%= link_to "問い合わせ",  "/rooms/#{@room.id}/reserve", {class: "btn btn-outline-primary"} %>
          </div>
          <% else %>
            <div class="text-right mt-2">
              <%= link_to "Back",  :back, {class: "btn btn-link"} %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 my-3">
      <%= render 'rooms/shared/hotel_facility', hotel: @hotel %>
    </div>
    <div class="col-md-6 my-3">
      <div class="card bg-white shadow-sm mb-3">
        <div class="card-header">
          <h5 class="text-muted">アメニティ・設備</h5>
        </div>
        <div class="card-body">
          <p class="card-text">
            <%= safe_join(@room.amenity.split("\n"),tag(:br)) %>
          </p>
        </div>
      </div>
      <%= render 'rooms/shared/hotel_etcinfo', hotel: @hotel %>
      <% if user_signed_in? %>
        <div class="text-right mt-2">
          <%= link_to "問い合わせ",  "/rooms/#{@room.id}/reserve", {class: "btn btn-outline-primary"} %>
        </div>
      <% else %>
        <div class="text-right mt-2">
          <%= link_to "Back",  :back, {class: "btn btn-link"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
