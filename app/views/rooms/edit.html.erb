<div class='container mt-5'>
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm mb-3">
        <%= image_tag @room.room_img.to_s, {width: "100%", class: "img-fluid"}  %>
        <div class="card-body p-5">
          <h5 class="card-title"><%= @room.room_name %></h5>
          <p class="card-text text-muted">
            <%= safe_join(@room.introduction.split("\n"),tag(:br)) %>
          </p>
          <h5 class="card-text text-md-right">
            最大人数: ￥<%= @room.group %>人
          </h5>
          <h5 class="card-text text-md-right">
            <% if @room.smoke == "1" %>
            禁煙
            <% else %>
            喫煙可
            <% end %>
          </h5>
          <h5 class="card-text text-md-right">賃料: ￥<%= @room.price %></h5>
          <div class="text-right pr-2">
            <small class="text-muted">Update: <%= @room.updated_at.strftime('%Y/%m/%d') %></small>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= form_for [@hotel, @room], url: {controller: 'rooms', action: 'update' }  do |f| %>
  <%= render 'layouts/shared/error_message', model: f.object %>
  <form>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.label :room_name, "ルーム名" %>
        <%= f.text_field :room_name, {class: "form-control"} %>
      </div>
      <div class="form-group col-md-3">
        <%= f.label :price, "賃貸料(月額)" %>
        <%= f.number_field :price, {class: "form-control"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-2">
        <%= f.label :group, "最大居住人数" %>
        <%= f.select :group, {'1人': 1, '2人': 2, '3人': 3, '4人': 4, '5人': 5, '6人': 6, '7人': 7, '8人': 8, '9人': 9, '10人': 10}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>
      <div class="form-group col-md-2">
        <%= f.label :smoke, "禁煙 / 喫煙可" %>
        <%= f.select :smoke, {'禁煙':'1', '喫煙可':'2'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :room_img, "ルーム画像" %>
        <%= f.file_field :room_img, {class: "form-control-file"} %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :introduction, "ルーム紹介文" %>
        <%= f.text_area :introduction, {id: "input-string", class: "form-control", rows: "5"} %>
        <p id="counter-str"></p>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :amenity, "アメニティ" %>
        <%= f.text_area :amenity, {id: "input-text", class: "form-control", rows: "10"} %>
        <p id="counter"></p>
      </div>
    </div>
    <%= f.submit "Registration", class: "btn btn-outline-primary" %>
  </form>
  <% end %>
</div>
<%= javascript_pack_tag 'form/application' %>
